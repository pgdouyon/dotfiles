alias tmux='tmux -f "$XDG_CONFIG_HOME/tmux/tmux.conf"'
alias ssh='TERM=xterm ssh'
alias ls='ls -hFG --color=auto'
alias ll='ls -hlFG --color=auto'
alias gtypist='gtypist -b -e1 -w -S'
alias jconsole='_JAVA_OPTIONS="" jconsole'
alias testping='ping -c3 www.google.com'
alias initvim='nvim -c "call fugitive#detect(expand(\"%:p\"))" "$XDG_CONFIG_HOME/nvim/init.vim"'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'

# git aliases
alias g='git'
alias ga='git add'
alias gap='git add -p'
alias gae='git add -e'
alias gb='git branch --color'
alias gci='git commit'
alias gco='git checkout'
alias gcob='git checkout -b'
alias gcp='git cherry-pick'
alias gd='git diff --color'
alias gdc='git diff --cached --color'
alias ggo='git log --graph --decorate --oneline --color'
alias gh='git help'
alias gm='git merge'
alias gmff='git merge --ff-only'
alias gmnf='git merge --no-ff'
alias gpo='git push origin master'
alias gpr='git pull --rebase'
alias grm='git rebase master'
alias grc='git rebase --continue'
alias gst='git status --short'
alias gsh='git show HEAD'
alias gss='git stash save'
alias gsp='git stash pop'
alias gsl='git stash list'

if [[ $(uname -s) = Darwin ]]; then
    alias locate='mdfind -name'
fi

# Fasd aliases
alias j='fasd_cd -d'
alias jj='fasd_cd -d -i'
alias o='a -e open'

[ -f ~/.bash_aliases.local ] && source ~/.bash_aliases.local
